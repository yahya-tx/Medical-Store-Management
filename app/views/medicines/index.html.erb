<h1>Medicines</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Branch</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @medicines.each do |medicine| %>
      <tr>
        <td><%= medicine.name %></td>
        <td><%= medicine.description %></td>
        <td><%= medicine.price %> Rs</td>
        <td><%= medicine.quantity %> Tablets</td>
        <td><%= medicine.branch.name %></td>
        <td>
          <%= link_to 'Show', branch_medicine_path(medicine.branch, medicine), class: 'btn btn-info' %>
          <%= link_to 'Delete', branch_medicine_path(medicine.branch, medicine), method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this medicine?' }, class: 'btn btn-danger' %>
          <%= link_to 'Edit Medicine', edit_branch_medicine_path(medicine.branch, medicine), class: 'btn btn-warning' %>
          <%= link_to 'New Medicine', new_branch_medicine_path(medicine.branch), class: 'btn btn-primary' %>
          <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
