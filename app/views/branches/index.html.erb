<h1>Branches</h1>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Created By</th>
      <th>User Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @branches.each do |branch| %>
        <% user = User.find_by(id: branch.user_id) %>
      <tr>
        <td><%= branch.name %></td>
        <td><%= branch.location %></td>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to 'Show', branch_path(branch), class: 'btn btn-info' %>
          <%= link_to 'Delete', branch_path(branch), method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this branch?' }, class: 'btn btn-danger' %>
          <%= link_to 'Edit Branch', edit_branch_path(branch), class: 'btn btn-warning' %>
          <%= link_to 'New Branch', new_branch_path, class: 'btn btn-primary' %>
          <% if current_user.branch_admin? %>
            <%= link_to 'Add Medicine', new_branch_medicine_path(branch), class: ' btn btn-success' %>
         <% end %>
         <% if current_user.super_admin? %>
            <%=  link_to 'View Users',branch_users_path(branch), class: 'btn btn-success' %>
          <% end %>
          <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
