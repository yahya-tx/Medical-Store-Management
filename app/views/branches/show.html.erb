<h1 class="medicine-details-title">Branch Details</h1>

<div class="medicine-details">
  <p>
    <strong>Name:</strong>
    <%= @branch.name %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= @branch.location %>
  </p>
  <% if current_user.super_admin? %>
    <%= link_to 'Back', branches_path, class: 'medicine-btn-secondary' %>
  <% end %>

  <% if current_user.super_admin? %>
    <%= link_to 'View Audits', branch_audit_logs_path(@branch), class: 'medicine-btn-secondary' %>
    <%= link_to 'View Stock Transfers', branch_stock_transfers_path(@branch), class: 'medicine-btn-secondary' %>
  <% end %>
 <% if current_user.branch_admin? %>
 <%= link_to 'Add Medicine', new_branch_medicine_path(@branch), class: 'medicine-btn-success' %>
 <%= link_to 'View Sales',branch_records_path(@branch),class: 'medicine-btn-success' %>
  <%= link_to 'Make Stock Trasnfer Request', new_branch_stock_transfer_path(@branch), class: 'medicine-btn-success' %>
  <%= link_to 'View Medicines Details', branch_medicines_path(@branch), class: 'medicine-btn-secondary' %>
 <% end %>
  <% if current_user.cashier? %>
    <%= link_to 'Create Bill',  new_branch_record_path(@branch), class: "btn btn-secondary" %>
  <% end %>


</div>
