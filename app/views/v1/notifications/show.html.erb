<!-- app/views/notifications/show.html.erb -->
<div class="main-content container">
  <div class="notification-show-container">
    <h2>Notification Details</h2>

    <p>
      <strong>Message:</strong>
      <%= @notification.message %>
    </p>

    <% if @notification.order_id.present? %>
      <p>
        <strong>Order ID:</strong>
        <%= @notification.order_id %>
      </p>
      <% if @notification.notification_type != "refund_order" %>
        <%= link_to 'View Order Details', v1_branch_record_path(current_user.branch), class: 'btn btn-secondary' %>
      <% end %>
    <% else %>
      <%= link_to 'Back to Notifications', v1_notifications_path, class: 'btn btn-secondary' %>
    <% end %>
  </div>
</div>