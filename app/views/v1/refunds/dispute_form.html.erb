<h1>Submit a Dispute</h1>

<%= form_with(url: dispute_v1_refund_path(@refund), method: :post, local: true) do |form| %>
  <%= hidden_field_tag :record_id, @refund.record_id %> <!-- Add this hidden field -->
  
  <div class="medicine-form-group">
    <%= form.label :reason, 'Reason for Dispute' %>
    <%= form.text_area :reason, rows: 5, class: 'medicine-form-control', required: true %>
  </div>

  <div class="form-group">
    <%= form.submit 'Submit Dispute', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Cancel', v1_refunds_path, class: 'btn btn-secondary' %>
