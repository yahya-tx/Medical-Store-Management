<h2>Submit a Dispute</h2>
<div class="main-content container">

    <%= form_with(url: dispute_v1_records_path, method: :post, local: true) do |form| %>
    <%= hidden_field_tag :record_id, @record_id %> <!-- Hidden field for record ID -->
    
    <div class="medicine-form-group">
        <%= form.label :reason, 'Reason for Dispute' %>
        <%= form.text_area :reason, rows: 5, class: 'medicine-form-control', required: true %>
    </div>

    <div class="form-group">
        <%= form.submit 'Submit Dispute', class: 'btn btn-primary' %>
    </div>
    <% end %>

    <%= link_to 'Cancel', customer_records_v1_records_path, class: 'btn btn-secondary' %>
</div>
