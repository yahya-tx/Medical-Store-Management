<h2 class = "h2-heading">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'devise-form' }) do |f| %>
  <div class="devise-field">
    <%= f.label :phone_number %><br />
    <%= f.telephone_field :phone_number, autocomplete: "tel", class: 'devise-input', placeholder: 'xxxx-xxxxxxx', id: 'user_phone_number' %>
  </div>

  <div class="devise-field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'devise-input' %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-success' %>
  </div>
<% end %>

<!-- Shared Links -->
<div class="devise-links">
  <%= render "devise/shared/links" %>
</div>

<style>
body {
  background-image: url('<%= asset_path("str.jpg") %>');
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  height: 100vh;
  margin: 0;
  padding: 0;
}
</style>
