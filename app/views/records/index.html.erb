<h1>Sales Since <%= 7.days.ago.strftime('%B %d, %Y') %></h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Total Amount</th>
      <th>Payment Method</th>
      <th>Customer Contact</th>
      <th>Cashier Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.id %></td>
        <td><%= record.total_amount %> Rs</td>
        <td><%= record.payment_method.capitalize %></td>
        <td><%= record.customer_contact %></td>
        <td><%= User.find_by(id: record.cashier_id).name %></td>
        <td>
          <%= link_to 'View Bill', branch_record_path(@branch, record), class: 'btn btn-info' %>
          <%= link_to 'Delete Bill', branch_record_path(@branch, record), method: :delete, data: { turbo_method: :delete, confirm: 'Are you sure you want to delete this record?' }, class: 'btn btn-danger' %>
          <%= link_to 'New Bill', new_branch_record_path(@branch), class: 'btn btn-success' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Bill', new_branch_record_path(@branch), class: 'btn btn-success' %>
<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
<div class="total-sales">
  <h3>Total Amount: <%= @total_sales %> Rs</h3>
</div>


